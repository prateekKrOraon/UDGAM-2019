<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login"
    android:orientation="vertical"
    android:background="#FFFFFF">

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="250dp"
    android:layout_marginTop="?android:attr/actionBarSize"
    android:layout_gravity="center_horizontal">
        <ImageView
            android:id="@+id/ulogo_image_login"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/ulogo"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:background="@android:color/transparent"/>

        <TextView
            android:id="@+id/welcome_text_login"
            android:layout_above="@+id/sign_in_continue"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Welcome to Udgam 2019"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
            android:textStyle="bold"
            android:textColor="@color/blue_0080"
            android:background="@android:color/transparent"
            />
    <TextView
        android:id="@+id/sign_in_continue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Sign in to continue"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:id="@+id/sign_bn"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/my_button"
        android:clickable="true"
        android:focusable="true"
        android:elevation="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Sign-In With Google"
            android:layout_gravity="center"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large.Inverse"/>
    </FrameLayout>

</android.support.design.widget.CoordinatorLayout>